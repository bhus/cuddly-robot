\backslash
textbf{AnyVal}:
 Primitive types like 
\backslash
texttt{Int},
 
\backslash
texttt{Double},
 
\backslash
texttt{Boolean},
 and 
\backslash
texttt{Unit}.
\end_layout

\begin_layout Plain Layout

    
\backslash
item 
\backslash
textbf{AnyRef}:
 All objects (the equivalent of 
\backslash
texttt{java.lang.Object}).
\end_layout

