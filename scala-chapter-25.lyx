\end_layout

\begin_layout Plain Layout


\backslash
begin{itemize}
\end_layout

\begin_layout Plain Layout

    
\backslash
item 
\backslash
textbf{Seq / List}:
 Ordered sequences.
 Use 
\backslash
texttt{List} for functional recursion and 
\backslash
texttt{Vector} for random access performance.
\end_layout

\begin_layout Plain Layout

    
\backslash
item 
\backslash
textbf{Set}:
 Unordered collections of unique elements.
\end_layout

\begin_layout Plain Layout

    
\backslash
item 
\backslash
textbf{Map}:
 Key-value pairs.
\end_layout

\begin_layout Plain Layout


\backslash
end{itemize}
\end_layout

